#!/bin/bash
arg="[TEST_FILES...]"
. ts-test-unit

export TS_USR_DIR
export TS_TMP_DIR

mkdir -p "$TS_TMP_DIR"
raw_file="$TS_TMP_DIR/raw"
mon_file="$TS_TMP_DIR/mon"

start_time=$SECONDS
for test_file in "$@"
do
  if [ -x "$test_file" ]
  then "$test_file"
  else printf "%% X [%s] not executable\n" "$test_file"
  fi
done | ts_process "$raw_file" "$mon_file"
end_time=$SECONDS

ts_summarize "$raw_file" "$start_time" "$end_time"
status=$?
ts_cleanup
exit $status
