#!/bin/sh
############################################################################
export TS_USR_DIR
export TS_TMP_DIR
export TS_CLEANUP

use="usage: %s [-c] [-h] [-t TMPDIR] [TEST_FILES...]\n"
opt="       %s   %s\n"
while getopts "cht:x" option
do
  case $option in
  c  )  TS_CLEANUP=true ;;
  h  )  printf "$use" "$0"
        printf "$opt" "-c" "cleanup tmp dir on complete"
        printf "$opt" "-h" "prints this help"
        printf "$opt" "-t" "test tmp dir"
        exit 0 ;;
  t  )  TS_TMP_DIR=$OPTARG ;;
  \? )  printf "$use" "$0"
        exit 2 ;;
  esac
done
shift $(($OPTIND - 1))

TS_USR_DIR="$(pwd)"
TS_TMP_DIR="${TS_TMP_DIR:-$TS_USR_DIR/tmp}"
TS_CLEANUP="${TS_CLEANUP:-false}"

############################################################################
# Check the input stream for output in the format:
#
#   [test/case:10] test_name
#   + true
#   P
#
# Partition failing output to $1, discard passing output.  Print to stdout '.'
# for passing tests and 'F' otherwise.
monitor () {
  sed -ne "
  /^\[/ b show
  H
  $ !b
  :show
  x

  s/F\$//p
  " | tr -d "\n"
}

# Abbreviate stdin by deleting xtrace lines using PS4="$PS4-"
untrace () {
  sed -e "
  /^${PS4:0:1}\{0,\}$PS4- /d
  /^${PS4}PS4='${PS4}- '/d
  "
}
############################################################################
printf "Started\n"

# Make and expand TS_TMP_DIR
mkdir -p "$TS_TMP_DIR"
TS_TMP_DIR="$(cd "$TS_TMP_DIR" || exit 1; pwd)"

# Prepare log files
input="$TS_TMP_DIR/input"
output="$TS_TMP_DIR/output"
rm -f "$input" "$output"
mkfifo "$input"
touch "$output"

# Run the test files
npass=0
nfail=0
start=$SECONDS
grep -onEH "^ *test_\w+ +\(\)" "$@" | tr -d " ()" | tr ":" " " > "$input" &

while read test_file lineno test_name
do
  # run the test by calling back into the test file
  # * use stdout for progress, stderr for debug information
  # * a zero exit status is considered a pass, otherwise fail
  printf "[$test_file:$lineno:$test_name]\n" #>&2

  # if ! [ -x "$test_file" ]
  # then 
  #   printf "-"
  #   printf "not executable" >&2
  #   continue
  # fi

  # if "$test_file" "$test_name" "$lineno"
  # then
  #   printf "."
  #   ((npass++))
  # else
  #   printf "F"
  #   ((nfail++))
  # fi
done < "$input" #2>> "$output"
exit
end=$SECONDS

# Report results
printf "\nFinished in %ss\n\n" "$(($end - $start))"
# cat "$output" | monitor | untrace
printf "%s pass, %s fail\n" "$npass" "$nfail"

# Cleanup
# rm -f "$input" "$output" "$errors"

if [ "true" = "$TS_CLEANUP" ]
then rm -r "$TS_TMP_DIR"
fi
