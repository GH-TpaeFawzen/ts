#!/bin/bash
############################################################################
ts_version="1.0"
ts_author="Simon Chiang"
ts_usage="usage: %s [-c] [-d] [-f] [-h] [-l] [-r] [-t TS_TMP_DIR] [-v] %s\n"
ts_args="[TEST_FILES...]"
ts_args="${ts_args:-[TEST_NAMES...]}"
ts_progname="${0##*/}"
ts_opt="       %s   %s\n"

while getopts "cdfhlmn:rt:v" ts_option
do
  case $ts_option in
    c  )  ts_cleanup=true ;;
    d  )  ts_debug=true ;;
    f  )  ts_format=true ;;
    h  )  printf "$ts_usage" "$ts_progname" "$ts_args"
          printf "$ts_opt" "-c" "cleanup tmp dir on complete"
          printf "$ts_opt" "-d" "debug mode"
          printf "$ts_opt" "-f" "format output"
          printf "$ts_opt" "-h" "prints this help"
          printf "$ts_opt" "-l" "list the tests to be run"
          printf "$ts_opt" "-m" "monitor output"
          printf "$ts_opt" "-r" "raw output (overrides -fmv)"
          printf "$ts_opt" "-t" "set the test tmp dir (default tmp)"
          printf "$ts_opt" "-v" "verbose output (show passing tests)"
          printf "\n"
          exit 0 ;;
    l  )  ts_list=true ;;
    m  )  ts_monitor=true ;;
    n  )  TS_NAME=$OPTARG ;;
    r  )  ts_raw=true ;;
    t  )  TS_TMP_DIR=$OPTARG ;;
    v  )  ts_verbose=true ;;
    \? )  printf "$ts_usage" "$ts_progname" "$ts_args"
          exit 2 ;;
  esac
done
shift $(($OPTIND - 1))

TS_USR_DIR="${TS_USR_DIR:-$(pwd)}"
TS_TMP_DIR="${TS_TMP_DIR:-$TS_USR_DIR/tmp}"

mkdir -p "$TS_TMP_DIR"
ts_raw_file="$TS_TMP_DIR/raw"
ts_mon_file="$TS_TMP_DIR/mon"

TS_PASS="${TS_PASS:-[32m}"
TS_FAIL="${TS_FAIL:-[1;31m}"
TS_NORM="${TS_NORM:-[0m}"
TS_NOEX="${TS_NOEX:-[1;37m}"

############################################################################
ts_list () {
grep -onE "^ *${TS_NAME:-test_\w+} +\(\)" "$@" |
tr -d " ()" |
tr ":" " "
}

ts_structure () {
sed -lne '
/^%/ {
1 !G
/^% P/a\
P
/^% F/a\
F
/^% X/a\
X
s/^% [PFX] //
s/\n//
p
c\

x
d
}
s/^/  /
H
'
}

ts_monitor () {
if [ "true" = "$ts_monitor" ]
then sed -lne "
/^\[/ !{
H
$ !d
}
x
1 d

w $ts_mon_file
/P\$/a\\
.
/F\$/a\\
F
/X\$/a\\
-
\$ a\\
n
" | 
  tr -ud "\n" | 
    tr -u "n" "\n" >&2
cat "$ts_mon_file"
else cat
fi
}

ts_format () {
if [ "true" = "$ts_format" ]
then sed -lne "
/^\[/ !{
H
$ !d
}
x
1 p

/P\$/ s/^\[\([^]]*\)/[$TS_PASS\1$TS_NORM/
/F\$/ s/^\[\([^]]*\)/[$TS_FAIL\1$TS_NORM/
/X\$/ s/^\[\([^]]*\)/[$TS_NOEX\1$TS_NORM/
s/[PFX]\$//p
"
else cat
fi
}

ts_filter () {
if [ "true" = "$ts_verbose" ]
then cat
else sed -lne "
/^\[/ !{
H
$ !d
}
x
1 d
/P\$/ d
/^\[[^[]*\[32m/ d
s/^[^[]*//p
"
fi
}

ts_process () {
if [ "true" = "$ts_raw" ]
then cat
else   
tee "$ts_raw_file" |
  ts_structure |
    ts_monitor "$ts_mon_file" |
      ts_format |
        ts_filter
fi
}

# Runs a specific test.  In that case the test output is not filtered or
# changed. the exit status is the exit status of the specific test.
ts_run_test () {
if [ -e "$test_dir" ] && ! rm -r "$test_dir"
then
  printf "could not remove existing test dir: %s\n" "$test_dir"
  exit 1
fi

exec <&-

setup
"$test_name"
exitstatus=$?
teardown

return $exitstatus
}

ts_report () {
if [ "true" != "$ts_raw" ]
then
  npass="$(grep -c '^% P' "$ts_raw_file")"
  nfail="$(grep -c '^% F' "$ts_raw_file")"
  nnoex="$(grep -c '^% X' "$ts_raw_file")"

  printf "%s pass %s fail %s s\n" "$npass" "$(($nfail + $nnoex))" "$(($ts_end_time - $ts_start_time))" >&2

  if [ "true" = "$ts_cleanup" ]
  then rm -r "$TS_TMP_DIR"
  fi

  [ "0" = "$(($nfail + $nnoex))" ]
fi
}

ts_run () {
test_file="$0"
test_case="${test_file##*/}"
test_case="${test_case%\.*}"

if [ "true" = "$ts_list" ]
then
  ts_list "$test_file"
  exit
fi

ts_start_time=$SECONDS
ts_list "$test_file" |
while read test_lineno test_name
do
  test_dir="$TS_TMP_DIR/$test_case/$test_name"

  # run the test by calling back into the test file
  # * use stdout for progress, stderr for debug information
  # * a zero exit status is considered a pass, otherwise fail
  if
    if [ "true" = "$ts_debug" ]
    then (ts_run_test 2>&1)
    else (ts_run_test 2>/dev/null)
    fi
  then ts_status=P
  else ts_status=F
  fi

  printf "%% %s [%s:%s] %s\n" "$ts_status" "$test_file" "$test_lineno" "$test_name"
done | ts_process
ts_end_time=$SECONDS
ts_report
}

ts_run_test_suite () {
if [ "true" = "$ts_list" ]
then
  ts_list "$@"
  exit
fi

export TS_USR_DIR
export TS_TMP_DIR
export TS_NAME

ts_start_time=$SECONDS
for test_file in "$@"
do
  if [ -x "$test_file" ]
  then "$test_file" -r
  else printf "%% X [%s] not executable\n" "$test_file"
  fi
done | ts_process
ts_end_time=$SECONDS
ts_report
}

if [ "ts" = "$ts_progname" ]
then
  ts_run_test_suite "$@"
  exit $?
fi

############################################################################
setup () {
  true
}

teardown () {
  true
}

# Runs a command and asserts it's exit status is 0.
assert () {
  "$@"
  exitstatus=$?

  if ! [ 0 -eq $exitstatus ]
  then
    printf "exit status %s:\n%s\n" "$exitstatus" "$*"
    exit 1
  fi
}

# Flunks unless the numbers $1 (expected) and $2 (actual) are the same.
assert_status () {
  expected=$1; actual=$2

  if ! [ $actual -eq $expected ]
  then 
    printf "expected status %s but was %s\n" "$expected" "$actual"
    exit 1
  fi
}

# Flunks unless the variables $1 (expected) and $2 (actual) are the same. 
# Reads from stdin for '-'.
assert_output () {
  expected="$1"; actual="$2"

  # use x to protect against '-' on ancient systems
  if [ x"$expected" = x"-" ]
  then expected="$(cat)"
  fi

  if [ x"$actual" = x"-" ]
  then actual="$(cat)"
  fi

  if [ x"$actual" != x"$expected" ]
  then
    mkdir -p "$(dirname "$test_dir")"
    printf "%s" "$expected" > "$test_dir.e.txt"
    printf "%s" "$actual"   > "$test_dir.a.txt"
    printf "unequal output:\n"
    diff "$test_dir.e.txt" "$test_dir.a.txt"
    exit 1
  fi
}

# Flunks unless the extended regular expression $1 (expected pattern) and $2
# (actual) match.  Reads from stdin for '-'.
assert_match () {
  patttern="$1"; actual="$2"

  # use x to protect against '-' on ancient systems
  if [ x"$patttern" = x"-" ]
  then patttern="$(cat)"
  fi

  if [ x"$actual" = x"-" ]
  then actual="$(cat)"
  fi

  if ! printf "%s" "$actual" | grep -qE "$patttern"
  then
    printf "output does not match pattern: %s\n%s\n" "$patttern" "$actual"
    exit 1
  fi
}
############################################################################
