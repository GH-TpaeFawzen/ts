############################################################################
# This file is meant to be sourced into the actual test file.
############################################################################

usr_dir="${TS_USR_DIR:-$(pwd)}"
tmp_dir="${TS_TMP_DIR:-$usr_dir/tmp}"
test_file="$0"
test_name="$1"
test_case="$(basename "$test_file")"
test_case="${test_case%\.*}"
test_dir="$tmp_dir/$test_case/$test_name"
test_dir="${test_dir%/}"

############################################################################

setup () {
  true
}

teardown () {
  true
}

# Flunks unless the numbers $1 (expected) and $2 (actual) are the same.
assert_status () {
  PS4="$PS4- "
  expected=$1; actual=$2

  if ! [ $actual -eq $expected ]
  then 
    printf "expected status $expected but was $actual\n" >&2
    exit 1
  fi
  PS4="${PS4%- }"
}

# Flunks unless the variables $1 (expected) and $2 (actual) are the same. 
# Reads from stdin for '-'.
assert_output () {
  PS4="$PS4- "
  expected="$1"; actual="$2"

  # use x to protect against '-' on ancient systems
  if [ x"$expected" = x"-" ]
  then expected="$(cat)"
  fi

  if [ x"$actual" = x"-" ]
  then actual="$(cat)"
  fi

  if [ x"$actual" != x"$expected" ]
  then
    mkdir -p "$(dirname "$test_dir")"
    printf "%s" "$expected" > "$test_dir.expect"
    printf "%s" "$actual"   > "$test_dir.actual"
    printf "unequal output:\n"
    diff "$test_dir.expect" "$test_dir.actual" >&2
    exit 1
  fi
  PS4="${PS4%- }"
}

# Flunks unless the extended regular expression $1 (expected pattern) and $2
# (actual) match.  Reads from stdin for '-'.
assert_match () {
  PS4="$PS4- "
  patttern="$1"; actual="$2"

  # use x to protect against '-' on ancient systems
  if [ x"$patttern" = x"-" ]
  then patttern="$(cat)"
  fi

  if [ x"$actual" = x"-" ]
  then actual="$(cat)"
  fi

  if ! [[ "$actual" =~ $patttern ]]
  then
    printf "does not match pattern: %s\n%s\n" "$patttern" "$actual" >&2
    exit 1
  fi
  PS4="${PS4%- }"
}

# Runs a specific test.  In that case the test output is not filtered or
# changed. the exit status is the exit status of the specific test.
run_test () {
  if [ "" = "$test_name" ]
  then
    printf "no test name specified" >&2
    exit 1
  fi

  # close stdin so that commands expecting stdin will not hang
  exec <&-

  # prepare the test dir
  if [ -e "$test_dir" ] && ! rm -r "$test_dir"
  then
    printf "could not remove existing test dir: %s\n" "$test_dir" >&2
    exit 1
  fi

  setup
  "$test_name"
  teardown
}
